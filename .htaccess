# Enables URL rewriting.

RewriteEngine On

# Removes the .html from .html files in the URL.

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]

# Redirects invalid URLs to the custom 404.html page.

ErrorDocument 404 https://robertrfg.com/404